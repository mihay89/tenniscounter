<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="AUSTRALIAN OPEN FINAL 2017"
    android:textColor="#FF0099CC"
    android:textSize="20sp"
    android:gravity="center_horizontal"/>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/federer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/nadal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:layout_marginLeft="8sp"
            android:onClick="setOneFederer"/>
        <TextView
            android:id="@+id/set_one_federer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SET 1"
            android:gravity="center_horizontal"
            android:textColor="#FF0099CC"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/set_one_nadal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center_horizontal" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:layout_marginRight="8sp"
            android:onClick="setOneNadal"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginLeft="8sp"
                android:onClick="setTwoFederer"/>
            <TextView
                android:id="@+id/set_two_federer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SET 2"
                android:gravity="center_horizontal"
                android:textColor="#FF0099CC"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/set_two_nadal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center_horizontal"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginRight="8sp"
                android:onClick="setTwoNadal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginLeft="8sp"
                android:onClick="setThreeFederer"/>
            <TextView
                android:id="@+id/set_three_federer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SET 3"
                android:gravity="center_horizontal"
                android:textColor="#FF0099CC"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/set_three_nadal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center_horizontal"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginRight="8sp"
                android:onClick="setThreeNadal"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="reset"/>
</RelativeLayout>